{
  "name": "@candidstartup/storybook",
  "private": true,
  "version": "0.13.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "storybook dev -p 6006",
    "typecheck": "tsc -p tsconfig.json",
    "build": "storybook build -o dist && storybook build -o dist/test --test",
    "build-docs": "storybook build -o ../../temp/storybook",
    "preview": "vite preview --port 6006",
    "playwright": "pnpm exec playwright test",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@candidstartup/infinisheet-types": "workspace:*",
    "@candidstartup/event-sourced-spreadsheet-data": "workspace:*",
    "@candidstartup/react-spreadsheet": "workspace:*",
    "@candidstartup/react-virtual-scroll": "workspace:*",
    "@candidstartup/simple-spreadsheet-data": "workspace:*",
    "react": "catalog:",
    "react-dom": "catalog:"
  }
}
