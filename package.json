{
  "name": "root",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "lerna-typecheck": "npx lerna run typecheck",
    "lerna-build": "npx lerna run build",
    "lerna-lint": "npx lerna run lint",
    "lerna-prodapi": "npx lerna run prodapi",
    "lerna-test": "npx lerna run test -- --run --coverage",
    "lerna-playwright": "PROD=true npx lerna run playwright",
    "build-docs": "npx typedoc && npm run build-docs --workspace=@candidstartup/storybook",
    "preview-docs": "vite preview --outDir temp",
    "prodbuild": "npm run lerna-typecheck && npm run lerna-build && npm run lerna-lint && npm run lerna-prodapi && npm run lerna-test && npm run lerna-playwright",
    "lerna-version": "npx lerna version --conventional-commits --sync-workspace-lock",
    "lerna-version-dryrun": "npx lerna version --conventional-commits --sync-workspace-lock --dry-run",
    "lerna-publish": "npx lerna publish from-package --yes",
    "test": "vitest --run --coverage"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.0",
    "@eslint/js": "^9.5.0",
    "@gordonmleigh/rollup-plugin-sourcemaps": "^0.1.2",
    "@lerna-lite/cli": "^4.11.0",
    "@lerna-lite/publish": "^4.11.1",
    "@lerna-lite/run": "^4.11.1",
    "@lerna-lite/version": "^4.11.1",
    "@microsoft/api-extractor": "^7.55.2",
    "@playwright/test": "^1.49.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@storybook/addon-docs": "9.1.17",
    "@storybook/react-vite": "9.1.17",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.10.1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/react-window": "^1.8.7",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "@vitest/coverage-istanbul": "^3.0.8",
    "@vitest/coverage-v8": "^3.0.8",
    "@vitest/ui": "^3.0.8",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-storybook": "9.1.17",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "jsdom-testing-mocks": "^1.13.1",
    "neverthrow": "^8.2.0",
    "path": "^0.12.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.17.2",
    "rollup-plugin-delete": "^3.0.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "storybook": "9.1.17",
    "typedoc": "^0.28.16",
    "typedoc-plugin-coverage": "^4.0.1",
    "typedoc-plugin-extras": "^4.0.0",
    "typescript": "5.0 - 5.9",
    "typescript-eslint": "^8.0.0",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^5.1.3",
    "vitest": "^3.2.0"
  }
}
