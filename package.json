{
  "name": "root",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">= 20",
    "npm": "Please use pnpm instead of npm to install dependencies",
    "yarn": "Please use pnpm instead of yarn to install dependencies",
    "pnpm": ">= 10"
  },
  "scripts": {
    "lerna-typecheck": "pnpm run -r typecheck",
    "lerna-build": "pnpm run -r build",
    "lerna-lint": "pnpm run -r lint",
    "lerna-prodapi": "pnpm run -r prodapi",
    "lerna-test": "pnpm run -r test --run --coverage",
    "lerna-playwright": "PROD=true pnpm run -r playwright",
    "build-docs": "pnpm exec typedoc && pnpm run -r --filter @candidstartup/storybook build-docs",
    "preview-docs": "vite preview --outDir temp",
    "prodbuild": "pnpm run lerna-typecheck && pnpm run lerna-build && pnpm run lerna-lint && pnpm run lerna-prodapi && pnpm run lerna-test && pnpm run lerna-playwright",
    "lerna-version": "pnpm exec lerna version --conventional-commits --sync-workspace-lock",
    "lerna-version-dryrun": "pnpm exec lerna version --conventional-commits --sync-workspace-lock --dry-run",
    "lerna-publish": "pnpm -r publish",
    "test": "vitest --run --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@gordonmleigh/rollup-plugin-sourcemaps": "^0.1.2",
    "@lerna-lite/cli": "^4.11.0",
    "@lerna-lite/version": "^4.11.1",
    "@microsoft/api-extractor": "^7.55.2",
    "@playwright/test": "^1.49.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@storybook/addon-docs": "9.1.17",
    "@storybook/react-vite": "9.1.17",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.10.1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react-swc": "^4.2.3",
    "@vitest/coverage-istanbul": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "eslint-plugin-storybook": "9.1.17",
    "globals": "^17.3.0",
    "jsdom": "^28.0.0",
    "jsdom-testing-mocks": "^1.13.1",
    "neverthrow": "^8.2.0",
    "path": "^0.12.7",
    "react": "catalog:",
    "react-dom": "catalog:",
    "rimraf": "^6.0.1",
    "rollup": "^4.17.2",
    "rollup-plugin-delete": "^3.0.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "storybook": "9.1.17",
    "typedoc": "^0.28.16",
    "typedoc-plugin-coverage": "^4.0.1",
    "typedoc-plugin-extras": "^4.0.0",
    "typescript": "5.0 - 5.9",
    "typescript-eslint": "^8.0.0",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^4.0.18"
  }
}
